@model LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}


<link rel="stylesheet" href="/css/login.css">

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" class="form">
                <h2>Вход</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Username"/>
                    <label asp-for="@Model.UserName" class="form-label">Username</label>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="checkbox mb-3 col">
                        <label asp-for="@Model.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="@Model.RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                    <p class="col text-end">
                        <a id="forgot-password">Forgot your password?</a>
                    </p>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary submit-btn bg-dark">Войти</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}