@model UserInputModel

@{
    var isSaved = ViewBag.isSaved ?? false;
    ViewData["Title"] = "Редактирование профиля";
}

<link rel="stylesheet" href="/css/edit-profile.css">

<div class="container row justify-content-center">
    @using (Html.BeginForm("EditProfile", "User", FormMethod.Post, new {@class = "form"}))
    {
        <div class="form-group pb-2">
            <label asp-for="UserName" class="control-label"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control"/>
        </div>

        <div class="row">
            <div class="form-group col pb-2">
                <label asp-for="FirstName" class="control-label"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="FirstName" class="form-control"/>
            </div>

            <div class="form-group col pb-2">
                <label asp-for="SecondName" class="control-label"></label>
                <span asp-validation-for="SecondName" class="text-danger"></span>
                <input asp-for="SecondName" class="form-control"/>
            </div>
        </div>

        <div class="form-group pb-2">
            <label asp-for="Status" class="control-label"></label>
            <span asp-validation-for="Status" class="text-danger"></span>
            <input asp-for="Status" class="form-control"/>
        </div>

        <div class="form-group pb-2">
            <label asp-for="Description" class="control-label"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
            <textarea asp-for="Description" id="dynamicInput" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Сохранить" class="w-100 btn btn-lg btn-secondary submit-btn bg-dark"/>
                @if (isSaved)
                {
                    <p class="text-success">Сохранено!</p>
                }
            </div>
        </div>
    }
</div>